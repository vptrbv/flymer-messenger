{
  "manifest_version": 2,

  "name": "Flymer",
  "description": "from maddeadcat",
  "version": "0.1",

  "icons": {
      "16":   "/icons/16x16.png",
      "32":   "/icons/32x32.png",
      "48":   "/icons/48x48.png",
      "128":  "/icons/128x128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://flymer.ru/*"],
      "css": ["additional.css"],
      "js": ["popup.js"]
    }
  ],

  "background": {
    "scripts": ["update.js"]
  },

  "browser_action": {
    "default_icon": "/icons/48x48.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "webRequest"
  , "webRequestBlocking"
  , "cookies"
  , "idle"
  , "background"
  , "notifications"
  , "http://flymer.ru/*"
  ]
}
